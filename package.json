{
  "name": "core",
  "version": "1.0.0",
  "description": "My Moleculer-based microservices project",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "dev": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --config moleculer.config.ts --hot --repl services/**/*.service.ts --repl projects/**/*.service.ts",
    "start": "moleculer-runner --config dist/moleculer.config.js",
    "test:types": "concurrently npm:prettier npm:typecheck",
    "typecheck": "tsc --noEmit && echo \"tsc: no typecheck errors\"",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "prettier": "prettier . --ignore-unknown --check",
    "prettier:fix": "prettier . --ignore-unknown --write",
    "dc:up": "docker-compose up --build -d",
    "dc:logs": "docker-compose logs -f",
    "dc:down": "docker-compose down"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": {
    "name": "Mirza",
    "email": "sayheymirza@gmail.com"
  },
  "workspaces": [
    "projects/*"
  ],
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^29.2.3",
    "@types/js-md5": "^0.7.2",
    "@types/node": "^18.11.9",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "jest": "^29.3.1",
    "moleculer-repl": "^0.7.3",
    "prettier": "^2.8.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.12.2",
    "axios": "^1.6.7",
    "dotnet": "^1.1.4",
    "form-data": "^4.0.0",
    "ioredis": "^5.3.2",
    "js-md5": "^0.8.3",
    "moleculer": "^0.14.27",
    "nats": "^2.7.1"
  },
  "engines": {
    "node": ">= 16.x.x"
  }
}
